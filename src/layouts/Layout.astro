---
import "../styles/global.css";
const isDev = import.meta.env.DEV;
const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
   <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <title>{title}</title>
   </head>
   <body>
      <header>
         <nav>
            <p class="brand">Brand</p>
            <ul>
               <li>
                  <a href="/" class={currentPath === "/" ? "active" : ""}
                     >Home</a
                  >
               </li>
               <li>
                  <a
                     href="/blog"
                     class={currentPath.startsWith("/blog") ? "active" : ""}
                     >Blog</a
                  >
               </li>
               <li>
                  <a
                     href="/about"
                     class={currentPath === "/about" ? "active" : ""}>About</a
                  >
               </li>
               {
                  isDev && (
                     <li>
                        <a
                           href="/keystatic"
                           class={
                              currentPath.startsWith("/keystatic")
                                 ? "active"
                                 : ""
                           }
                        >
                           Keystatic Admin
                        </a>
                     </li>
                  )
               }
            </ul>
         </nav>
      </header>
      <main>
         <slot />
      </main>
      <footer>
         <p class="copyright">&copy; {new Date().getFullYear()} Brand</p>
      </footer>
   </body>
</html>
